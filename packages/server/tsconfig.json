{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        /* Modules */
        "rootDir": "./src",
        "baseUrl": "./src",
        /* Language and Environment */
        "target": "ESNext",
        /* Modules */
        "module": "NodeNext",
        /* Emit */
        "sourceMap": true,
        "outDir": "./build",
        "removeComments": true,
        "experimentalDecorators": true
    },
    "include": ["src", "../../package.json"],
    "exclude": ["node_modules", "build"],
    "ts-node": {
        "esm": true
    }
}
